{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "npm:unpublishSafe",
    ":disableRateLimiting",
    ":pinVersions",
    ":semanticCommitsDisabled"
  ],
  "labels": ["Dependencies"],
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "matchManagers": ["gradle"],
      "labels": ["java"]
    },
    {
      "matchManagers": ["npm"],
      "labels": ["javascript"]
    },
    {
      "matchPackagePrefixes": [
        "org.commonmark:", 
        "org.jsoup:", 
        "org.lesscss:",
        "rome:"
      ],
      "labels": ["javascript"]
    }
  ]
}
